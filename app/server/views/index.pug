doctype html
html(lang="en")
  head
    title The OFFL
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css", integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi", crossorigin="anonymous")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
    link(rel="stylesheet", href="./css/main.css")
  body
    nav.navbar.navbar-dark
      a.navbar-brand(href='#') 
        img(src='./images/logo.png', alt='OFFL')
      ul.nav.navbar-nav
        li.nav-item
          // a.nav-link(href='#') Archives
    .container
      .row
        .col-sm-6
          .card
            .card-header
                span 2016 Champ
            .card-block
              .card-left
                img(src='./images/champ.jpg' height=100)      
              span Congratulations to David for winning the 2016 season
        .col-sm-6
          .card
            .card-header
              span 2016 Loser
            .card-block
              .card-left
                img(src='./images/sacko.jpg' height=100)      
              span Congratulations to Scott for losing the 2016 season         
      .row
        .col-sm-6
            .card
              .card-header
                i.fa.fa-trophy
                span World Records
              .card-block
                ul
                  li Most Points (season): Jeff Sottile (1536pts)
                  li Most Single Game Points: John Kelly (175pts - Week 3 2016)
        .col-sm-6
          .card
            .card-header
              i.fa.fa-bomb
              span Shame Corner
            .card-block
              ul
                li Least Points (season): Scott Cotton (1176pts)
                li Least Single Game Points: Patrick McFall (50pts - Playoffs Week 3)
                li Largest Destruction: J. Pero loses to P. McFall, 86-164 (78pt diff)
      .row
        .col-sm-6
          .card
            .card-header 
              i.fa.fa-diamond  
              span Hall of Champions
            .card-block
              h5 2016 - David Bordanarama
              h6 2015 - Ken Kelly
              h6 2014 - Paul Ackerman
              h6 2013 - Brad Huffman
              h6 2012 - Jeff Sottile
              h6 2011 - Jason Pero
      
